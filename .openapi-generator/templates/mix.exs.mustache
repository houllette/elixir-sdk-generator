defmodule {{moduleName}}.MixProject do
  use Mix.Project

  @source_url "https://github.com/{{gitUserId}}/{{gitRepoId}}"
  @version "{{packageVersion}}"

  def project do
    [
      app: :{{packageName}},
      version: @version,
      elixir: "~> 1.18",
      start_permanent: Mix.env() == :prod,
      deps: deps(),
      description: description(),
      package: package(),
      docs: docs(),
      test_coverage: [tool: ExCoveralls],
      preferred_cli_env: [
        coveralls: :test,
        "coveralls.detail": :test,
        "coveralls.post": :test,
        "coveralls.html": :test,
        "coveralls.github": :test
      ],
      dialyzer: [
        plt_add_apps: [:ex_unit],
        plt_file: {:no_warn, "priv/plts/dialyzer.plt"}
      ]
    ]
  end

  def application do
    [
      extra_applications: [:logger],
      mod: {{{moduleName}}.Application, []}
    ]
  end

  defp deps do
    [
      # HTTP client
      {:tesla, "~> 1.15"},
      {:finch, "~> 0.20"},

      # Development and testing
      {:ex_doc, "~> 0.38", only: :dev, runtime: false},
      {:excoveralls, "~> 0.18", only: :test},
      {:credo, "~> 1.7", only: [:dev, :test], runtime: false},
      {:dialyxir, "~> 1.4", only: [:dev, :test], runtime: false},
      {:mox, "~> 1.2", only: :test},
      {:bypass, "~> 2.1", only: :test},
      {:sobelow, "~> 0.14", only: [:dev, :test], runtime: false}
    ]
  end

  defp description do
    """
    {{description}}
    """
  end

  defp package do
    [
      name: "{{packageName}}",
      files: ~w(lib .formatter.exs mix.exs README.md LICENSE CHANGELOG.md),
      licenses: ["{{licenseName}}"],
      links: %{
        "GitHub" => @source_url,
        "Changelog" => "#{@source_url}/blob/main/CHANGELOG.md"
      },
      maintainers: ["{{authorName}}"]
    ]
  end

  defp docs do
    [
      main: "readme",
      source_url: @source_url,
      source_ref: "v#{@version}",
      extras: ["README.md", "CHANGELOG.md", "CONTRIBUTING.md"],
      groups_for_modules: [
        "API Operations": [
{{#apiInfo}}
{{#apis}}
{{#operations}}
          {{moduleName}}.Api.{{classname}},
{{/operations}}
{{/apis}}
{{/apiInfo}}
        ],
        Models: [
{{#models}}
{{#model}}
          {{moduleName}}.Model.{{classname}},
{{/model}}
{{/models}}
        ],
        Core: [
          {{moduleName}}.Connection,
          {{moduleName}}.Application
        ]
      ]
    ]
  end
end
